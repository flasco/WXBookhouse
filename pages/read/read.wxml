<!--pages/read.wxml-->
<view wx:if='{{isFirst}}' bindtap='notFirst' class='tip-container'>
  <view class='tip-edge'>
    <text class='tip-text'>上一章</text>
  </view>
  <view class='tip-center'>
    <text class='tip-text'>呼出菜单</text>
  </view>
  <view class='tip-edge'>
    <text class='tip-text'>下一章</text>
  </view>
</view>
<scroll-view scroll-y="true" scroll-top="{{scrollTop}}" bindscroll="scroll" style="position: absolute; left: 0; top:0; bottom: 0; right: 0;">
  <view style='padding:0 30rpx 100rpx;' bindtap='clickEvent'>
    <text class='SunnyMode_title'>{{title}}</text>
    <block wx:for="{{lines}}" wx:key='this*'>
      <text class='SunnyMode_text'>{{item}}</text>
    </block>
  </view>
</scroll-view>