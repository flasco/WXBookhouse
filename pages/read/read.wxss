/* pages/read.wxss */
@import '../../assets/iconfont.wxss';

.sunny-container {
  background-color: #acc7a7;
}

.night-container {
  background-color: #0c0c0c;
}

.scroll-view {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
}

.btn-container {
  display: flex;
  padding:0 30rpx;
  padding-bottom: 100rpx;
  margin-top: 30rpx;
}

.btn-class {
  flex: 1;
  margin: 0 10rpx;
}

.btn-sunny {
  background-color: #acc7a7;
  color: #0d2a0f;
  border: #0d2a0f 1rpx solid;
}

.btn-night {
  background-color: #0c0c0c;
  color: #5b5b5b;
  border: #5b5b5b 1rpx solid;
}


.titleStyle {
  color: #576457;
  font-size: 38rpx;
  margin: 0.8em 0;
  display: block;
}

.sunny-title {
  color: #576457;
}

.night-title {
  color: #474747;
}

.textStyle {
  display: block;
  word-wrap: break-word;
  word-break: break-all;
  margin: 0.4em 0;
  overflow: hidden;
  line-height: 1.8;
  font-size: 42rpx;
  text-align: justify;
}

.sunny-text {
  color: #0d2a0f;
}

.night-text {
  color: #5b5b5b;
}

.tip-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  display: flex;
  flex-direction: column;
}

.tip-next {
  flex: 3;
  display: flex;
  background: rgba(60, 60, 60, 0.4);
  align-items: center;
  justify-content: center;
}

.tip-top {
  flex: 4;
  display: flex;
  background: rgba(0, 0, 0, 0.4);
  align-items: center;
  justify-content: center;
}

.tip-text {
  color: rgba(255, 255, 255, 0.8);
}

.menu-top-text {
  color: #bbb;
  font-size: 30rpx;
  padding: 0 18rpx;
}

.menu-item {
  flex: 1;
  text-align: center;
  flex-direction: column;
  display: flex;
}

.iconfont {
  color: #bbb;
  font-size: 42rpx;
  font-family: 'iconfont';
}

.iconfont-list::before {
  content: '\e690';
}

.iconfont-moon::before {
  content: '\e6df';
}

.iconfont-setting::before {
  content: '\e6b4';
}

.menu-item-text {
  font-size: 26rpx;
  color: #bbb;
}
